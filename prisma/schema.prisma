generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id                                Int        @id @default(autoincrement()) @map("id")
  username                          String     @unique @db.VarChar(50)
  password                          String     @db.VarChar(255)
  email                             String     @unique @db.VarChar(255)
  role                              String     @default("user") @db.VarChar(5)
  createdat                         DateTime   @default(now()) @db.Timestamp(6)
  updatedat                         DateTime   @default(now()) @db.Timestamp(6)
  image                             String?
  feedbacks                         feedback[]
  feedback_feedback_usernameTousers feedback[] @relation("feedback_usernameTousers")
}

model articles {
  id        BigInt     @id @default(autoincrement())
  title     String?
  category  String?
  shortdesc String?
  longdesc  String?
  location  String?
  image     String?
  createdat DateTime?  @default(now()) @db.Timestamptz(6)
  updatedat DateTime?  @default(now()) @db.Timestamptz(6)
  feedbacks feedback[]
}

model feedback {
  id                             BigInt    @id @default(autoincrement())
  rating                         Int
  ulasan                         String
  createdAt                      DateTime? @default(now()) @db.Timestamp(6)
  userid                         Int
  articleid                      BigInt
  username                       String?   @db.VarChar
  articles                       articles  @relation(fields: [articleid], references: [id], onDelete: Cascade)
  users                          users     @relation(fields: [userid], references: [id], onDelete: Cascade)
  users_feedback_usernameTousers users?    @relation("feedback_usernameTousers", fields: [username], references: [username], onDelete: NoAction)
}

enum Category {
  Wisata
  Budaya
}

enum Rating {
  ONE   @map("1")
  TWO   @map("2")
  THREE @map("3")
  FOUR  @map("4")
  FIVE  @map("5")
}

enum enum_rating_rating {
  ONE   @map("1")
  TWO   @map("2")
  THREE @map("3")
  FOUR  @map("4")
  FIVE  @map("5")
}
